{
    "name": "shelob9/action-test",
    "description": "ActionTest",
    "require": {
        "php": "^7.2|^8.0"
    },
    "type": "wordpress-plugin",
    "autoload": {
        "psr-4": {
            "ActionTest\\": "./php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ActionTest\\Tests\\": "./tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "yoast/phpunit-polyfills": "^1.0.1",
        "mockery/mockery": "1.2",
        "brain/monkey": "2.*"
    },
    "scripts": {
        "test": "phpunit --config=phpunit-unit.xml"
    }
}